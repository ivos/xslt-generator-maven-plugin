<document xmlns="http://maven.apache.org/changes/1.0.0"
	xmlns:xsi="http://http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/changes/1.0.0 http://maven.apache.org/plugins/maven-changes-plugin/xsd/changes-1.0.0.xsd">
	<properties>
		<title>Changes</title>
		<author email="ivo.maixner@gmail.com">Ivo Maixner</author>
	</properties>
	<body>
		<release version="1.4" date="">
			<action type="add" date="2010-09-05" dev="imaixner">
				Added force option on all goals to skip timestamp logic.
			</action>
			<action type="update" date="2010-09-05" dev="imaixner">
				Re-packaged java classes to the new SourceForge project url.
			</action>
			<action type="update" date="2010-09-04" dev="imaixner">
				Switched scm from svn to git.
			</action>
			<action type="update" date="2010-09-04" dev="imaixner">
				Moved project into its own SourceForge project.
			</action>
			<action type="add" date="2010-08-27" dev="imaixner">
				Added initialize and finalize goals to enable skipping of up-to-date source files.
			</action>
		</release>
		<release version="1.3" date="2010-03-18">
			<action type="update" dev="imaixner">
				Supports consistent ordering of source files on win and linux.
			</action>
		</release>
		<release version="1.2" date="2009-04-27">
			<action type="update" dev="imaixner">
				License fixed to Apache 2.
			</action>
			<action type="add" dev="imaixner">
				Added missing setters to allow calling from another Maven plugin.
			</action>
			<action type="add" dev="imaixner">
				Reads xsl files from dependencies.
			</action>
		</release>
		<release version="1.1" date="2009-01-25">
			<action type="fix" dev="imaixner">
				When xslt file or src dir do not exist, 
				just logs a warning and does not fail the build.
			</action>
		</release>
		<release version="1.0" date="2009-01-11">
			<action type="add" dev="imaixner">
				Initial release.
			</action>
		</release>
	</body>
</document>